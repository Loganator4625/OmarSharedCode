#include <iostream>
#include <string>
using namespace std;

char Encryptor(char usedLetter) {

	char encryptedLetter;

	encryptedLetter = usedLetter + 1;

	return encryptedLetter;
}

int main() {

	string usedWord;

	string decryptedWord;

	char inputLetter;

	cout << "Provide a letter" << endl;

	getline(cin, usedWord);

	for (size_t i = 0; i < usedWord.length(); i++)
	{
		inputLetter = usedWord[i];

		inputLetter = Encryptor(inputLetter);

		usedWord[i] = inputLetter;
	}

	cout << decryptedWord;

	return 0;
}
